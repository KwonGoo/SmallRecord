<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7fff3"
        tools:context=".BabyPage">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:layout_gravity="bottom"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:background="#AFE0FE">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/_1"
                android:id="@+id/foodButton"
                android:background="#eaffe0"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/baby"
                android:id="@+id/babyButton"
                android:background="#f7fff3"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/diary"
                android:id="@+id/diaryButton"
                android:background="#eaffe0"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/community"
                android:id="@+id/communityButton"
                android:background="#eaffe0"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/setting"
                android:id="@+id/settingButton"
                android:background="#eaffe0"
                android:layout_weight="1"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="844dp">


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="422dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="211dp">
                <TextView
                        android:layout_width="205.5dp"
                        android:layout_height="211dp" android:id="@+id/textView6" android:layout_weight="1"
                        android:text="\n응애가 똥싼지\n4시간 00분\n지났어요!" android:textAlignment="center"
                        android:textSize="25sp" android:drawablePadding="10dp"/>
                <TextView
                        android:text="\n응애가 밥먹은지\n4시 30분\n지났어요!"
                        android:layout_width="205.5dp"
                        android:layout_height="211dp" android:id="@+id/textView4" android:layout_weight="1"
                        android:textSize="25sp" android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="\n응애가 일어난지\n10시간 30분\n지났어요!"
                        android:layout_width="205.5dp"
                        android:layout_height="211dp" android:id="@+id/textView7"
                        android:textSize="25sp" android:textAlignment="center" android:layout_weight="1"/>
                <TextView
                        android:text="\n\n\n+\n\n"
                        android:layout_width="205.5dp"
                        android:layout_height="211dp" android:id="@+id/textView5" android:layout_weight="1"
                        android:textSize="25sp" android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="422dp" android:translationY="422dp">
            <ImageView
                    android:layout_width="31dp"
                    android:layout_height="350dp" android:id="@+id/imageView3"
                    android:translationY="73dp" android:translationX="31dp" android:background="#FF0000"/>
            <ImageView
                    android:layout_width="31dp"
                    android:layout_height="350dp"
                    android:id="@+id/progressBar2" android:translationX="62dp" android:translationY="72dp"
                    android:background="#FF5722"/>
            <ImageView
                    android:layout_height="350dp"
                    android:id="@+id/progressBar4" android:translationX="93dp" android:translationY="72dp"
                    android:layout_width="31dp" android:background="#FFEB3B"/>
            <ImageView
                    android:layout_height="350dp"
                    android:id="@+id/progressBar5" android:translationX="124dp" android:translationY="72dp"
                    android:layout_width="31dp" android:background="#8BC34A"/>
            <ImageView
                    android:layout_height="350dp"
                    android:id="@+id/progressBar6" android:translationX="155dp" android:translationY="72dp"
                    android:layout_width="31dp" android:background="#2196F3"/>
            <ImageView
                    android:layout_height="350dp"
                    android:id="@+id/progressBar7" android:translationX="186dp" android:translationY="72dp"
                    android:layout_width="31dp" android:background="#9C27B0"/>
        </LinearLayout>
    </FrameLayout>


</FrameLayout>

