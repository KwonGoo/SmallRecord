<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00A9FF7F"
        tools:context=".FoodPage">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:layout_gravity="bottom"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:background="#AFE0FE">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/_1"
                android:id="@+id/foodButton"
                android:background="#f7fff3"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/baby"
                android:id="@+id/babyButton"
                android:background="#eaffe0"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/diary"
                android:id="@+id/diaryButton"
                android:background="#eaffe0"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/community"
                android:id="@+id/communityButton"
                android:background="#eaffe0"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/setting"
                android:id="@+id/settingButton"
                android:background="#eaffe0"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="844dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="🍚 이유식 목록"
                        android:textSize="28dp"
                        android:layout_height="50dp" android:id="@+id/textView" android:textStyle="bold"
                        android:layout_width="361dp" android:background="#8bcbc8" android:textColor="#3c2e3d"/>
                <Button
                        android:text="🔍"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/button6"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="397dp" android:visibility="visible" android:background="#00FFFFFF">

            <TextView
                    android:text="⭐인기"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" android:id="@+id/textView2" android:background="#ecc7c0"
                    android:textColor="#3c2e3d"/>
            <ListView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:background="#f7fff3">
            </ListView>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="397dp" android:visibility="visible">
            <TextView
                    android:text="⏲️최신"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" android:id="@+id/textView3" android:background="#ecc7c0"
                    android:textColor="#3c2e3d"/>
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="#f7fff3">
            </ListView>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="844dp">

        <Button
                android:text="추가"
                android:layout_width="120dp"
                android:layout_height="50dp" android:id="@+id/button5" android:translationY="710dp"
                android:translationX="280dp"/>
    </FrameLayout>


</FrameLayout>

